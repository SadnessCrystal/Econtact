{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            {% if contacts is defined and contacts | length > 0 %}
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Delete</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.contact.firstName }}</td>
                <td>{{ contact.contact.lastName }}</td>
                <td>{{ contact.contact.email }}</td>
                <td>{{ include('admin/contact/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Pas de contacts</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button><a href="{{ path('app_contact_add') }}">Add a contact</a></button>

    {% if hasADeletionRequest is same as false %}
        <button><a href="{{ path('app_demande_suppression_new') }}">Request a deletion</a></button>
    {% endif %}
{% endblock %}
